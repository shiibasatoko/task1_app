<h3>スケジュール編集</h3>

<%= form_for @task do |f| %>
<table>
 <tr>
  <th><%= f.label:title,"タイトル" %></th>
  <td><%= f.text_field:title %></td>
 </tr>
 
 <tr>
  <th><%= f.label:start_on,"開始日" %></th>
  <td><%= f.date_field:start_on %></td>
 </tr>
 
 <tr>
  <th><%= f.label:end_on,"終了日" %></th>
  <td><%= f.date_field:end_on %></td>
 </tr>

 <tr>
  <th><%= f.label:all,"終日" %></th>
  <td><p>終日の場合はチェックを入れます</p></td>
 </tr>
 
 <tr>
  <th><%= f.label:memo,"スケジュールメモ" %></th>
  <td><%= f.text_area:memo %></td>
 </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールの編集を完了する" %></li>
    <li><%= link_to "スケジュール一覧に戻る",:tasks %></li>
  </ul>
</div>
<% end %>