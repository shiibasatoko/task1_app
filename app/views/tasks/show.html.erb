<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  
  <tr>
    <th>開始日</th>
    <td><%= @task.start_on %></td>
  </tr>
  
  <tr>
    <th>投稿日時</th>
    <td><%= @task.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  
  <tr>
    <th>終日</th>
    <td>
    <% if @task.all == true %>
      ○
     <% else @task.all == false %>
  
     <% end %></td>
  </tr>
  
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る",:tasks %></li>
    <li><%= link_to"スケジュールを編集する",:edit_task %></li>
    <li><%= link_to "スケジュールを削除",:task,method: :delete,data:{confirm:"本当に削除しますか？"} %></li>
  </ul>
</div>